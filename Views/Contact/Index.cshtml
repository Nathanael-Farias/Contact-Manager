@model IEnumerable<AuthSystem.Models.ContactModel>

@{
    ViewData["Title"] = "Contact list";
}




<div class="text-center">
    <br>
    <h1 class="display-4">Contact list</h1>
    <br>
    <div>
        <a asp-controller="Contact" asp-action="Create" class="btn btn-primary" role="button">
            Add new Contact
        </a>
    </div>

<table id="table-contacts" class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Number</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contact in Model)
        {
            <tr>
                <th scope="row">@contact.Id</th>
                <td>@contact.Name</td>
                <td>@contact.Email</td>
                <td>@contact.Phone</td>
                <td>
                    <a asp-controller="Contact" asp-action="Edit" asp-route-id="@contact.Id" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-controller="Contact" asp-action="DeleteConfirmation" asp-route-id="@contact.Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this contact?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
