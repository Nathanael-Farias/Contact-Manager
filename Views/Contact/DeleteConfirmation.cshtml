@model AuthSystem.Models.ContactModel

@{
    ViewData["Title"] = "Confirm Deletion";
}

<h1>Confirm Deletion</h1>
<p>Are you sure you want to delete the following contact?</p>

<div>
    <strong>Name:</strong> @Model.Name <br />
    <strong>Email:</strong> @Model.Email <br />
    <strong>Phone:</strong> @Model.Phone
</div>

<form asp-action="Delete" asp-route-id="@Model.Id" method="post">
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a href="@Url.Action("Index", "Contact")" class="btn btn-secondary">Cancel</a>
</form>
