@{
    ViewData["Title"] = "Edit";
}

<br>
<h1 class="display-4">Edit Contact</h1>
<br>
<div class="container">
    <h2 class="my-4">Edit</h2>
    <form>
        <div class="mb-3">
            <label for="name" class="form-label">Full Name</label>
            <input type="text" class="form-control" id="name" placeholder="Enter your full name" required>
        </div>
        
        <div class="mb-3">
            <label for="email" class="form-label">Email address</label>
            <input type="email" class="form-control" id="email" placeholder="Enter email" required>
        </div>
        
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" id="password" placeholder="Password" required>
        </div>
        
        <button type="submit" class="btn btn-lg btn-success w-100 my-2">Change</button>
    </form>

    <br>
    <a href="@Url.Action("Index", "Contact")" class="btn btn-lg btn-outline-secondary w-100 my-2">Back to Contact List</a>
</div>
