@model IEnumerable<AuthSystem.Models.UserModel>

@{
    ViewData["Title"] = "User list";
}

<div class="text-center">
    <br>
    <h1 class="display-4">User list</h1>
    <br>
    <div>
        <a asp-controller="User" asp-action="Create" class="btn btn-primary" role="button">
            Add new User
        </a>
    </div>

    <table id="table-users" class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Login</th>
                <th scope="col">Email</th>
                <th scope="col">Profile</th>
                <th scope="col">Registration Date</th>
                <th scope="col">Modification Date</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var user in Model)
                {
                    <tr>
                        <th scope="row">@user.Id</th>
                        <td>@user.Nome</td>
                        <td>@user.Login</td>
                        <td>@user.Email</td>
                        <td>@user.Profile.ToString()</td>
                        <td>@user.RegistrationDate.ToString("dd/MM/yyyy")</td>
                        <td>@user.ModificationDate?.ToString("dd/MM/yyyy")</td>
                        <td>
                            <a asp-controller="User" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary btn-sm">Edit</a>
                            <a asp-controller="User" asp-action="DeleteConfirmation" 
                            asp-route-id="@user.Id" class="btn btn-danger btn-sm" 
                            onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="8" class="text-center">No users found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

<script type="text/javascript">
    $(document).ready(function() {
        $('#table-users').DataTable({
            
            "paging": true,       
            "searching": true,    
            "info": true          
        });
    });
</script>
