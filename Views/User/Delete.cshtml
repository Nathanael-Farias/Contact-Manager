@model AuthSystem.Models.UserModel

@{
    ViewData["Title"] = "Confirm Deletion";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="text-center" style="transform: scale(1.5);">
        <h1>Confirm Deletion</h1>
        <p>Are you sure you want to delete the following user?</p>

        <div>
            <strong>Name:</strong> @Model.Nome <br />
            <strong>Email:</strong> @Model.Email <br />
            <strong>Login:</strong> @Model.Login
        </div>

        <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post" class="mt-3">
            <button type="submit" class="btn btn-danger">Yes, Delete</button>
            <a href="@Url.Action("Index", "User")" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
