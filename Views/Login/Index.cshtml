@model LoginModel

@{
    Layout = "_LayoutUnlogged";
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h3 class="card-title text-center mb-4">Login</h3>
                    <form asp-controller="Login" asp-action="Enter" method="post">
                        <div class="mb-3">
                            <label for="username" class="form-label">Username</label>
                            <input asp-for="Login" type="text" class="form-control" id="username" name="username" placeholder="Enter your username" required>
                            @Html.ValidationMessageFor(x => x.Login)
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input asp-for="Password" type="password" class="form-control" id="password" name="password" placeholder="Enter your password" required>
                            @Html.ValidationMessageFor(x => x.Password)                       
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Log In</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
